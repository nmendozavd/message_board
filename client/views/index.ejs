<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Message Board</title>
    <style media="screen">
      *{
        font-family: sans-serif;
      }
      #wrapper{
        width:60%;
        margin:0 auto;
      }
      textarea{
        width: 100%;
      }
      .comments-container{
        padding-left: 40px;
      }
      .align-right{
        text-align: right;
      }
    </style>
  </head>
  <body>
    <div id="wrapper">

    <h1>The Dojo Message Board</h1>
    <hr>

    <form action="/" method="post">
      <label>Name:</label>
      <input type="text" name="name" value="">
      <br>
      <label>Message:</label>
      <textarea name="text" rows="6"></textarea>
      <br>
      <div class="align-right">
        <input type="submit" name="" value="Post message">
      </div>
    </form>

    <% for (var x = 0; x < messages.length; x+=1){ %>
      <div class="message">
        <h3>Name: <%= messages[x].name %></h3>
        <h3>Message: <%= messages[x].text %></h3>
        <div class="comments-container">
          <% for (var y = 0; y < messages[x].comments.length; y+=1){ %>
            <div class="comment">
              <p>Name: <%= messages[x].comments[y].name %></p>
              <p>Comment: <%= messages[x].comments[y].text %></p>
            </div>
          <% } %>
          <form action="/<%= messages[x].id %>" method="post">
            <label>Name:</label>
            <input type="text" name="name" value="">
            <br>
            <label>Comment:</label>
            <textarea name="text"></textarea>
            <br>
            <div class="align-right">
              <input type="submit" name="" value="Post comment">
            </div>
          </form>
        </div>
      </div>
    <% } %>
    </div>
  </body>
</html>
